{
  "manifest_version": 3,
  "name": "SaveTab.csv",
  "version": "1.0",
  "description": "Save tabs with categories, tags, and scrolling screenshots locally.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>",
    "file:///*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/tab2csv.png",
      "48": "icons/tab2csv.png",
      "128": "icons/tab2csv128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/tab2csv.png",
    "48": "icons/tab2csv.png",
    "128": "icons/tab2csv128.png"
  }
}